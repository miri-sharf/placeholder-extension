{
    "manifest_version": 2,
    "name": "Placeholder Button Extension",
    "version": "1.0",
    "description": "Adds a button next to an input with autofill from placeholder.",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.amazon.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "48": "icon.png"
    }
}